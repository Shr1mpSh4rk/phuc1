  <!-- Section End-->
  
  <!-- Featured Product-->
   <%   cate.forEach(function(ca){ var id = 0; %>
      <section id="featured" class="row mt40">
        <div class="container">
         
          <h1 class="heading1"><span class="maintext"> <%= ca.name%> </span><span class="subtext">Sản Phẩm Bán Chạy Nhất</span></h1>
          
          <ul class="thumbnails">
            <%  product.forEach(function(pro){ if(id < 4) { if(pro.cateId == ca._id){ id ++ ; %>

                  <li class="span3">
                    <a class="prdocutname" href="/chi-tiet/<%= pro.nameKhongDau%>.<%= pro._id%>.<%= pro.cateId%>.html"> <%= pro.name %> </a>
                    <div class="thumbnail">

                      <a href="/chi-tiet/<%= pro.nameKhongDau%>.<%= pro._id%>.<%= pro.cateId%>.html"><img alt="" src="upload/<%= pro.img %>"></a>
                      <div class="pricetag">
                        <span class="spiral"></span>
                        <a href="/add-cart.<%= pro._id %>" class="productcart">Thêm Vào Giỏ</a>
                        <div class="price">
                          <div class="pricenew"><%= pro.price %> $</div>


                        </div>
                      </div>
                    </div>
                  </li>

            <% }}})%>

          </ul>

          
        </div>

      </section>

  <% })%>
